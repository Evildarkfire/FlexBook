<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlexBook" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="textFillColor">@color/white</item>
        <item name="itemFillColor">@color/transparent_grey</item>
    </style>

    <style name="ThemeOverlay.FlexBook.FullscreenContainer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <style name="Theme.FlexBook.Menu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="backgroundColor">@color/transparent_black_80</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="itemIconTint">@color/purple_200</item>
        <item name="textFillColor">@color/grey</item>
    </style>

    <style name="Theme.FlexBook.Button">
        <item name="itemIconTint">@color/purple_500</item>
    </style>
</resources>